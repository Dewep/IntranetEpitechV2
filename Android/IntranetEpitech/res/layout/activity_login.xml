<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:contentDescription="@string/epitech"
        android:src="@drawable/logo_epitech_white" />

    <LinearLayout
        android:id="@+id/login_bloc_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/login_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/progress_connect"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_bloc_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_login"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyz_-0123456789"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/login_epitech"
            android:textColor="@color/white"
            android:textColorHint="@color/grey_dark"
            android:textColorLink="@color/blue_light" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/password_epitech"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/grey_dark"
            android:textColorLink="@color/blue_light" />

        <TextView
            android:id="@+id/login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/error" />

        <Button
            android:id="@+id/login_connect"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:text="@string/connect"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>